<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3sp"
    app:cardElevation="4sp"
    app:cardUseCompatPadding="true"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="6sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginVertical="3sp">

                <ImageView
                    android:id="@+id/all_request_imageView"
                    android:layout_width="100sp"
                    android:layout_height="160sp"
                    android:padding="5sp"
                    android:contentDescription="Image"
                    android:layout_gravity="center"
                    android:src="@drawable/request_help" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[Click to Enlarge]"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6sp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="9">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name: "
                            android:textColor="#757575"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/all_name"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10sp"
                            android:text="@null"
                            android:textColor="#757575"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:text="Phone: "
                            android:textColor="#757575"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/all_phone"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10sp"
                            android:paddingTop="3dp"
                            android:text="@null"
                            android:textColor="#757575"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:text="Help Type: "
                            android:textColor="#757575"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/all_help_type"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10sp"
                            android:paddingTop="3dp"
                            android:text="@null"
                            android:textColor="#757575"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:text="Submission Time: "
                            android:textColor="#757575"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/all_request_submission_time"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10sp"
                            android:paddingTop="3dp"
                            android:text="@null"
                            android:textColor="#757575"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginTop="6dp"
                        android:background="#8f8f8f" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status:" />

                        <TextView
                            android:id="@+id/all_request_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10sp"
                            android:text="@null"
                            android:textAllCaps="true"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#8f8f8f"
            android:layout_marginHorizontal="15sp"/>

        <Button
            android:id="@+id/view_map_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View On Map"
            android:textColor="@color/black"
            android:background="@color/transparent"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>